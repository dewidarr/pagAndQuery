<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.monko.foreach.SetupActivity">

    <Button
        android:id="@+id/SetupSubmitbtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/setupNamefiled"
        android:layout_alignBottom="@+id/backprofile"
        android:layout_marginBottom="221dp"
        android:background="@drawable/setuprounded"
        android:text=" Save "
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupNamefiled"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/setupNamefiled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/backprofile"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="@string/enter_name"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/cardview_light_background"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/SetupSubmitbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setupimagebtn"
        tools:ignore="RtlHardcoded" />

    <ImageButton
        android:id="@+id/imagebackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="21dp"
        android:background="#33B5E5"
        android:scaleType="centerCrop"
        android:src="@mipmap/cam2"
        app:layout_constraintBottom_toTopOf="@+id/setupimagebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/setupimagebtn"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_below="@+id/imagebackground"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:background="@drawable/profilerounded"
        android:contentDescription=""
        android:scaleType="centerCrop"
        android:src="@mipmap/cam2"
        app:layout_constraintBottom_toTopOf="@+id/setupNamefiled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagebackground"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>