<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.monko.foreach.RoomsActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/listView" />

    <EditText
        android:id="@+id/roomName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/mopilenumber"
        android:layout_alignBottom="@+id/mopilenumber"
        android:layout_alignStart="@+id/emailField"
        android:background="@drawable/rounded"
        android:hint="Room name"/>

    <Button
        android:id="@+id/push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/listView"
        android:layout_toEndOf="@+id/roomName"
        android:text="push" />
</RelativeLayout>
